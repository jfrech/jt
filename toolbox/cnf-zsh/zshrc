# Jonathan Frech's zshrc; last modified 2020-11-04

bindkey -v
export KEYTIMEOUT=1

export EDITOR='vim'
export BROWSER='brave-browser'
export LESSHISTSIZE=0

alias ls='ls --color=auto -A'
alias grep='grep --color=auto'
alias brave='brave-browser --incognito'

setopt PROMPT_SUBST
export PROMPT='$(jt zsh-prompt)'

export PATH="$PATH:$jt_local"
