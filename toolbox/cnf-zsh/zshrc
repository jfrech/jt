# Jonathan Frech's zshrc; last modified 6th of June 2020


bindkey -v
export KEYTIMEOUT=1

export EDITOR='vim'
export BROWSER='brave-browser'
export LESSHISTSIZE=0

alias ls='ls --color=auto -A'
alias grep='grep --color=auto'
alias brave='brave-browser --incognito'


"$jt_local/jt" internal build jprompt
setopt PROMPT_SUBST
export PROMPT='$($jt_local/toolbox/jprompt/jprompt) %M@%n %5~ %# %E'

export PATH="$PATH:$jt_local"
